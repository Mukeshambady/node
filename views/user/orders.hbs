<session>
    <div class="container">
        <div class="row mt-4">
            <h1 class="text-center">OrderList</h1>
        </div>
        <hr>
        
    <table class="table mt-5">
        <thead>
            <tr>
                <th>Date</th>
                <th>Address</th>
                <th>Pincode</th>
                <th>Mobile</th>
                <th>Amount</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

               {{#each orders}}
            <tr>
                <td scope="row">{{this.date}}</td>
                <td>{{this.deliveryDetails.address}}</td>
                <td>{{this.deliveryDetails.pincode}}</td>
                <td>{{this.deliveryDetails.mobile}}</td>
                <td>{{this.totalPrice}}</td>
                <td>{{this.paymentMethod}}</td>
                <td>{{this.status}}</td>
                <td>
                    <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a>
                </td>
                
            </tr>
            {{/each}}
            
        </tbody>
    </table>
 </div>
</session>